<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:cardElevation="1dp"
        app:cardCornerRadius="20dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/black"
        android:id="@+id/cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/HomeImageIv"
                android:layout_width="196dp"
                android:layout_height="172dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:text="image"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/reddish">

                    <TextView
                        android:id="@+id/HomeIdTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:text="Products Name"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/HomeProductNameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/georgia_regular"
                        android:textStyle="bold"
                        android:text="Products Name"
                        android:textSize="20dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/HomeCategoryTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:text="Products Name"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        />


                    <TextView
                        android:id="@+id/HomeStatusTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:text="Products Name"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/HomeDescriptionTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:text="Products Name"
                        android:textSize="20dp"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/reddish">

                            <RatingBar
                                android:id="@+id/ratingbar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginStart="10dp"
                                style="?android:attr/ratingBarStyleSmall"
                                android:stepSize="0.5"
                                android:rating="3.5"
                                android:isIndicator="true" />

                            <TextView
                                android:id="@+id/HomePriceTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="price"
                                android:drawableLeft="@drawable/ic_peso_sign"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="10dp"
                                android:textSize="20sp"
                                android:textColor="@color/white"/>
                        </RelativeLayout>
                </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>